    <script>
      $('#buttonSubmitComment').click (function () {
        $.ajax ({
          url: '/comments',
          type: 'POST',
          contentType: 'application/json',
          data: JSON.stringify ({comment: $('textarea#comment').val (), date: new Date ()})
        });
        $('textarea#comment').val ('');
      });

